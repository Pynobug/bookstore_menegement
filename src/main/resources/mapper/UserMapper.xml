<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fby.store.mapper.UserMapper">
    <!--自定义映射规则-->
    <resultMap id="UserEntityMap" type="com.fby.store.entity.User">
        <result column="uid" property="uid"/>
        <result column="is_delete" property="isDelete"/>
        <result column="creat_user" property="creatUser"/>
        <result column="creat_time" property="creatTime"/>
        <result column="modified_user" property="modifiedUser"/>
        <result column="modified_time" property="modifiedTime"/>


    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO t_user (
            username, password, salt, phone, email, gender, avatar, is_delete,
            creat_user, creat_time, modified_user, modified_time
        ) VALUES (
            #{username}, #{password}, #{salt}, #{phone}, #{email}, #{gender}, #{avatar}, #{isDelete},
            #{creatUser}, #{creatTime}, #{modifiedUser}, #{modifiedTime}
        )
    </insert>

    <select id="findByUsername" resultMap="UserEntityMap">
        SELECT * FROM t_user WHERE username = #{username}
    </select>


</mapper>